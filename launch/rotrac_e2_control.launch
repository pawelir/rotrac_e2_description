<?xml version="1.0" encoding="UTF-8"?>
<launch>
<!--Loading the yaml file and launching the controllers 
with the robot state publisher for the TF publication-->

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find rotrac_e2_description)/config/rotrac_e2_control.yaml" command="load"/>

  <!-- load the controllers -->
  <!--Here you state that all controllers defined in the yaml are active.-->

  <node pkg="controller_manager" name="controller_spawner" 
  type="spawner" respawn="false" output="screen" ns="/rotrac_e2"
    args="front_left_wheel_velocity_controller
    front_right_wheel_velocity_controller
    rear_left_wheel_velocity_controller
    rear_right_wheel_velocity_controller
    front_axle_position_controller
    rear_axle_position_controller
    joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node pkg="robot_state_publisher" name="robot_state_publisher" 
  type="robot_state_publisher" respawn="false" output="screen" rate="50">
    <!--remap from="/joint_states" to="/my_robot/joint_states" /-->
  </node>

</launch>